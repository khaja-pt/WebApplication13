@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-5 mt-5">
        <div class="card login-logout-card">
            <div class="card-header">
                <!-- Fixed the class assignment syntax and removed unnecessary spaces -->
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <!-- Ensure your href attributes are correctly pointing to your login and registration URLs -->
                        <a class="nav-link" href="/Identity/Account/Login">Log In</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Register">Register</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <!-- Corrected the class assignment syntax and fixed typos in class names -->
                <div class="row justify-content-center">
                    <div class="col-10 my-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(function () {
            const currentPage = location.pathname;
            $('.nav-tabs li a').each(function () {
                const $this = $(this);
                // Corrected the method name to .toLowerCase() and fixed the logic for adding the 'active' class
                if (currentPage.toLowerCase().includes($this.attr('href').toLowerCase())) {
                    // Corrected the method name to .addClass() to add the 'active' class correctly
                    $this.addClass('active');
                }
            });
        })
    </script>
}
